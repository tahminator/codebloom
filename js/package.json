{
    "name": "codebloom-frontend",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "typecheck": "tsc -b --noEmit",
        "test": "pnpm run typecheck && pnpm run prettier && pnpm run lint && pnpm run build",
        "fix": "pnpm run eslint:fix && pnpm run stylelint:fix && pnpm run prettier:fix",
        "lint": "pnpm run eslint && pnpm run stylelint",
        "generate": "openapi-typescript http://localhost:8080/v3/api-docs -o src/lib/api/types/autogen/schema.ts --properties-required-by-default --enum --make-paths-enum --dedupe-enums && prettier --write \"src/lib/api/types/autogen/schema.ts\"",
        "generate:dev": "nodemon --watch ../ --ext java --exec \"pnpm run generate\"",
        "eslint": "eslint .",
        "eslint:fix": "eslint . --fix",
        "stylelint": "stylelint '**/*.css'",
        "stylelint:fix": "stylelint '**/*.css' --fix",
        "prettier": "prettier --check .",
        "prettier:fix": "prettier --write .",
        "preview": "vite preview"
    },
    "dependencies": {
        "@mantine/core": "^8.1.2",
        "@mantine/dates": "^8.1.2",
        "@mantine/form": "^8.1.2",
        "@mantine/hooks": "^8.1.2",
        "@mantine/notifications": "^8.1.2",
        "@sentry/react": "^9.19.0",
        "@tabler/icons-react": "^3.30.0",
        "@tanstack/react-query": "^5.64.2",
        "@tanstack/react-query-devtools": "^5.64.2",
        "clsx": "^2.1.1",
        "dayjs": "^1.11.13",
        "eslint-plugin-react": "^7.37.5",
        "immer": "^10.1.3",
        "mantine-form-zod-resolver": "^1.3.0",
        "motion": "^12.4.7",
        "prettier": "^3.5.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-icons": "^5.4.0",
        "react-router": "^6.28.1",
        "react-router-dom": "^6.28.1",
        "react-syntax-highlighter": "^15.6.6",
        "sass": "^1.83.1",
        "use-debounce": "^10.0.4",
        "use-immer": "^0.11.0",
        "vite-tsconfig-paths": "^5.1.4",
        "zod": "^3.25.76"
    },
    "devDependencies": {
        "@eslint/js": "^9.17.0",
        "@tailwindcss/postcss": "^4.1.14",
        "@types/react": "^18.3.18",
        "@types/react-dom": "^18.3.5",
        "@types/react-syntax-highlighter": "^15.5.13",
        "@vitejs/plugin-react": "^4.3.4",
        "eslint": "^9.17.0",
        "eslint-plugin-perfectionist": "^4.8.0",
        "eslint-plugin-react-hooks": "^5.1.0",
        "eslint-plugin-react-refresh": "^0.4.16",
        "globals": "^15.14.0",
        "nodemon": "^3.1.10",
        "openapi-typescript": "^7.8.0",
        "postcss": "^8.4.49",
        "postcss-preset-mantine": "^1.17.0",
        "postcss-simple-vars": "^7.0.1",
        "stylelint": "^16.14.1",
        "stylelint-config-recommended": "^15.0.0",
        "stylelint-config-standard": "^37.0.0",
        "stylelint-config-standard-scss": "^14.0.0",
        "tailwindcss": "^4.1.14",
        "typescript": "~5.6.3",
        "typescript-eslint": "^8.19.0",
        "vite": "^6.2.7"
    },
    "packageManager": "pnpm@9.15.3"
}
